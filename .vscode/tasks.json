        {
            "label": "Delete build/release target folder",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "rm",
            "args": [
                "-f",
                "-R",
                "release",
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
           "label": "CMake create build release config",
           "type": "shell",
           "options": {
               "cwd": "${workspaceRoot}/build"
           },
           "command": "cmake",
           "args": [
               "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
               "-DCMAKE_BUILD_TYPE:STRING=Release",
               "-DCMAKE_C_COMPILER:FILEPATH=/usr/bin/clang",
               "-DCMAKE_CXX_COMPILER:FILEPATH=/usr/bin/clang++",
               "-H${workspaceRoot}", 
               "-B${workspaceRoot}/build/release",
               "-G",
               "'Unix Makefiles'",
           ],
           "problemMatcher": [
               "$gcc"
           ],
        },
        // /usr/bin/cmake --build /home/dsistemas/Desktop/CPP/test03/build/Debug --config Debug --target main -j 6 --
        {
            "label": "CMake build release target",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build/release",
                "--config",
                "Release",
                "--target",
                "test04",
                "-j",
                "6",
                "--"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "CMake create build release config"
        },
        {
            "label": "Delete build/debug target folder",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "rm",
            "args": [
                "-f",
                "-R",
                "debug",
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "CMake create build debug config",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-DCMAKE_BUILD_TYPE:STRING=Debug",
                "-DCMAKE_C_COMPILER:FILEPATH=/usr/bin/clang",
                "-DCMAKE_CXX_COMPILER:FILEPATH=/usr/bin/clang++",
                "-H${workspaceRoot}", 
                "-B${workspaceRoot}/build/debug",
                "-G",
                "'Unix Makefiles'",
            ],
            "problemMatcher": [
                "$gcc"
            ],
         },
         // /usr/bin/cmake --build /home/dsistemas/Desktop/CPP/test03/build/Debug --config Debug --target main -j 6 --
         {
             "label": "CMake build debug target",
             "type": "shell",
             "options": {
                 "cwd": "${workspaceRoot}/build"
             },
             "command": "cmake",
             "args": [
                 "--build",
                 "${workspaceRoot}/build/debug",
                 "--config",
                 "Debug",
                 "--target",
                 "test04",
                 "-j",
                 "6",
                 "--"
             ],
             "problemMatcher": [
                 "$gcc"
             ],
             "dependsOn": "CMake create build debug config"
         },
    ],
    "version": "2.0.0"
}